FROM golang:1.23-alpine

WORKDIR /app

COPY ../go.mod ../go.sum ./
RUN go mod download

COPY order ./order
COPY ./shared ./shared
COPY ./config.yaml ./config.yaml

RUN mkdir -p /app/logs

WORKDIR /app/

RUN go build -o /app/order/bin/server /app/order/cmd/*.go

EXPOSE 50052

CMD ["/app/order/bin/server"]
