FROM golang:1.23-alpine

WORKDIR /app

COPY ../go.mod ../go.sum ./
RUN go mod download

COPY ./shipping ./shipping
COPY ./shared ./shared
COPY ./config.yaml ./config.yaml

RUN mkdir -p /app/logs

WORKDIR /app

RUN go build -o /app/shipping/bin/server /app/shipping/cmd/*.go

EXPOSE 50051

CMD ["/app/shipping/bin/server"]